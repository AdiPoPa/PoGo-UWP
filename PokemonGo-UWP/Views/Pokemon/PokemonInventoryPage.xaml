        <Storyboard x:Name="ShowIncubatorsModalStoryboard">
            <DoubleAnimation x:Name="ShowIncubatorsModalAnimation"
                             Storyboard.TargetName="IncubatorsGridTranslateTransform"
                             Storyboard.TargetProperty="Y"
                             From="350"
                             To="0"
                             Duration="0:0:0.2" />
        </Storyboard>

        <Storyboard x:Name="HideIncubatorsModalStoryboard">
            <DoubleAnimation x:Name="HideIncubatorsModalAnimation"
                             Storyboard.TargetName="IncubatorsGridTranslateTransform"
                             Storyboard.TargetProperty="Y"
                             From="0"
                             To="350"
                             Duration="0:0:0.2" />
        </Storyboard>

    </Page.Resources>

    <!--Contextmenu--><!--
    <Grid x:Name="ContextMenuPanel"
          RelativePanel.AlignTopWithPanel="True"
          RelativePanel.AlignLeftWithPanel="True"
          RelativePanel.AlignBottomWithPanel="True"
          RelativePanel.AlignRightWithPanel="True"
          Opacity="0">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0"
                                 EndPoint="0.5,1">
                <GradientStop Color="#00b3ee9a"
                              Offset="0.1" />
                <GradientStop Color="#EE43bab6"
                              Offset="0.8" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    VerticalAlignment="Bottom">
            <StackPanel.RenderTransform>
                <TranslateTransform Y="200"
                                    x:Name="ContextMenuTranslateTransform" />
            </StackPanel.RenderTransform>

            --><!--Favorite--><!--
            <Grid HorizontalAlignment="Right"
                  Background="Transparent"
                  Height="43">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <media:ControlStoryboardAction Storyboard="{StaticResource HideContextMenuStoryboard}" />
                        <core:InvokeCommandAction Command="{Binding FavoritePokemonCommand}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <TextBlock Grid.Column="0"
                           x:Uid="FavoriteTextBlock"
                           Text="FAVORITE"
                           Style="{StaticResource TextSortTitle}"
                           Foreground="#e4ffde"
                           Margin="15,0,0,0" />
                <Image Grid.Column="1"
                       Height="25"
                       Width="25"
                       Source="ms-appx:///Assets/Icons/ic_fav_light.png" />
            </Grid>

            --><!--Appraise--><!--
            <Grid HorizontalAlignment="Right"
                  Background="Transparent"
                  Height="43"
                  Visibility="{Binding PlayerTeamIsSet, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <media:ControlStoryboardAction Storyboard="{StaticResource HideContextMenuStoryboard}" />
                        <core:InvokeCommandAction Command="{Binding AppraisePokemonCommand}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <TextBlock Grid.Column="0"
                           x:Uid="AppraiseTextBlock"
                           Text="APPRAISE"
                           Style="{StaticResource TextSortTitle}"
                           Foreground="#e4ffde"
                           Margin="15,0,0,0" />
                <Image Grid.Column="1"
                       Height="25"
                       Width="25"
                       Source="ms-appx:///Assets/Buttons/btn_close.png" />
            </Grid>

            --><!--Transfer--><!--
            <Grid HorizontalAlignment="Right"
                  Background="Transparent"
                  Height="43">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <core:InvokeCommandAction Command="{Binding TransferPokemonCommand}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <TextBlock Grid.Column="0"
                           x:Uid="TransferTextBlock"
                           Text="TRANSFER"
                           Style="{StaticResource TextSortTitle}"
                           Foreground="#e4ffde" />
                <Image Grid.Column="1"
                       Height="25"
                       Width="25"
                       Source="ms-appx:///Assets/Icons/ic_candy_light.png" />
            </Grid>
        </StackPanel>

        --><!--Close Contextmenu--><!--
        <Button Style="{StaticResource ButtonCircle}"
                Grid.Row="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,21,21">
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="Tapped">
                    <media:ControlStoryboardAction Storyboard="{StaticResource HideContextMenuStoryboard}" />
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
            <Image Source="ms-appx:///Assets/Buttons/btn_close.png" />
        </Button>
    </Grid>-->

